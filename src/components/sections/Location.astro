---
import Container from "../Container.astro";
import Link from "../Link.astro";
import about from "../../data/about";
---

<section id="localizacao">
    <Container class="container flex flex-col gap-6 px-6 py-16">
        <div class="flex flex-col">
            <h2 class="text-2xl">Localização</h2>
            <p class="text-gray-500">
                <span>Conheça o local do evento, </span>
                <Link
                    href={about.location.google_maps_link}
                    class:list={"text-primary"}
                    target="_blank">{about.location.google_maps_link_text}</Link
                >
            </p>
        </div>

        <div class="border border-secundary-light p-3">
            <iframe
                src={about.location.google_maps_embed_link}
                width="100%"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </Container>
</section>
