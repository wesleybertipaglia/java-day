---
import Container from "../Container.astro";
import Link from "../Link.astro";
---

<section id="localizacao">
    <Container class="container flex flex-col gap-6 px-6 py-16">
        <div class="flex flex-col">
            <h2 class="text-2xl">Localização</h2>
            <p class="text-gray-500">
                <span>Conheça o local do evento, </span>
                <Link
                    href="https://maps.app.goo.gl/nPDF5MA4UhPP6GiG7"
                    class:list={"text-primary"}
                    target="_blank">veja no mapa.</Link
                >
            </p>
        </div>

        <div class="border border-secundary-light p-3">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3729.513639581743!2d-49.40665742392989!3d-20.810955266346713!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94bdad767a6fb261%3A0x3077586f84d1afba!2sEtec%20Philadelpho%20Gouv%C3%AAa%20Netto!5e0!3m2!1sen!2sbr!4v1722442429787!5m2!1sen!2sbr"
                width="100%"
                height="450"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </Container>
</section>
