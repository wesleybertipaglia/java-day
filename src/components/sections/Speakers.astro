---
import Container from "../Container.astro";
import CardSpeaker from "../cards/CardSpeaker.astro";
import Link from "../Link.astro";
import { speakers } from "../../data/people";
---

<section id="palestrantes">
    <Container class="container flex flex-col gap-6 px-6 py-16">
        <div class="flex flex-col">
            <h2 class="text-2xl">Nossos Palestrantes</h2>
            <p class="text-gray-500">
                <span>Entre para nosso hall da fama,</span>
                <Link href="/#" class="text-primary">seja um palestrante.</Link>
            </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {speakers.map((item) => <CardSpeaker {...item} />)}
        </div>
    </Container>
</section>
