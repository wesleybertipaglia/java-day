---
import Container from "../Container.astro";
import Card from "../cards/Card.astro";
import AvatarGrid from "../avatars/AvatarGrid.astro";
import { speeches } from "../../data/schedule";
---

<section id="palestras">
    <Container class="container flex flex-col gap-6 px-6 py-16">
        <div class="flex flex-col">
            <h2 class="text-2xl">Palestras</h2>
            <p class="text-gray-500">Palestras de 2024.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                speeches.map(({ title, description, speakers }) => (
                    <Card class="px-4 py-6 flex flex-col gap-4 h-fit">
                        <h3 class="text-lg">{title}</h3>
                        <p class="text-gray-400">{description}</p>

                        <AvatarGrid avatars={speakers} />
                    </Card>
                ))
            }
        </div>
    </Container>
</section>
