---
interface Props {
    avatars: { name: string; image: string }[];
}

const { avatars } = Astro.props;
---

<div class="grid" style="grid-template-columns: 32px 32px auto;">
    {
        avatars.map(({ name, image }) => (
            <figure
                class="h-12 w-12 border-2 overflow-hidden border-secundary bg-secundary-light rounded-full"
                title={name}
            >
                <img
                    src={image}
                    alt={name}
                    class="h-full w-full object-cover"
                />
            </figure>
        ))
    }
</div>
