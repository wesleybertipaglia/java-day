---
import Card from "./Card.astro";

interface Props {
	image: string;
	alt: string;
}

const { image, alt } = Astro.props;
---

<Card>
	<figure
		class="h-auto w-full aspect-square object-cover overflow-hidden bg-secundary-light"
	>
		<img
			src={image}
			alt={alt}
			class="w-full h-auto aspect-square object-cover"
		/>
	</figure>
	<div class="px-4 py-6">
		<slot />
	</div>
</Card>
